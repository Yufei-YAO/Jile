<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newGray"
    >

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pie_chart"
            android:layout_width="400dp"
            android:layout_height="400dp" />
    </androidx.viewpager.widget.ViewPager>

    <Button
        android:layout_below="@+id/pie_chart"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnBillDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        tools:ignore="NotSibling" />

    <com.xuexiang.xui.widget.alpha.XUIAlphaTextView
        android:id="@+id/expand_button"
        style="@style/TextAppearance.AppCompat.Medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?android:windowBackground"
        android:gravity="center"
        android:padding="16dp"
        android:text="@string/GraphByKind" />

    <com.xuexiang.xui.widget.layout.ExpandableLayout
        android:layout_below="@id/expand_button"
        android:id="@+id/expandable_layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:el_duration="1000"
        app:el_expanded="true">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp">

                <TextView
                    android:id="@+id/textCostGraph"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="39dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rb_bg_selector"
                    android:text="@string/CostGraph" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageCostGraphByKind"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        app:srcCompat="@drawable/icon_cny" />

                    <Button
                        android:id="@+id/btnCostGraphByKind"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        android:text="@string/CostGraphByKind" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageCostGraphByAccount"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        app:srcCompat="@drawable/icon_cny" />
                    <Button
                        android:id="@+id/btnCostGraphByAccount"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        android:text="@string/CostGraphByAccount" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageMonthCost"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        app:srcCompat="@drawable/icon_cny" />
                    <Button
                        android:id="@+id/btnMonthCost"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        android:text="@string/MonthCost" />
                </LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textIncomeGraph"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_width="20dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/rb_bg_selector"
                    android:text="@string/IncomeGraph" />

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageIncomeGraphByKind"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        app:srcCompat="@drawable/icon_cny" />
                    <Button
                        android:id="@+id/btnIncomeGraphByKind"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        android:text="@string/IncomeGraphByKind" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageIncomeGraphByAccount"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        app:srcCompat="@drawable/icon_cny" />
                    <Button
                        android:id="@+id/btnIncomeGraphByAccount"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        android:text="@string/IncomeGraphByAccount" />
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/imageMonthIncome"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        app:srcCompat="@drawable/icon_cny" />
                    <Button
                        android:id="@+id/btnMonthIncome"
                        android:layout_width="match_parent"
                        android:layout_height="21dp"
                        android:layout_weight="1"
                        android:background="@color/newGray"
                        android:text="@string/MonthIncome" />
                </LinearLayout>

            </TableRow>

        </TableLayout>

    </com.xuexiang.xui.widget.layout.ExpandableLayout>

    <RelativeLayout
        android:id="@+id/endlayout"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/top_and_bottom_edge">
        <Button
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/btnSetStartDate"
            android:textSize="12sp"
            android:text="2020年12月12日"
            />
        <ImageView
            android:layout_toEndOf="@+id/btnSetStartDate"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_arrow_right"
            android:id="@+id/lianjiefu"
            android:layout_height="match_parent"/>
        <Button
            android:layout_toEndOf="@+id/lianjiefu"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/btnSetEndDate"
            android:textSize="12sp"
            android:text="2020年12月12日"
            />
        <com.xuexiang.xui.widget.tabbar.EasyIndicator
            android:id="@+id/easy_indicator"
            android:layout_toEndOf="@+id/btnSetEndDate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            app:indicator_line_show="true"
            app:indicator_line_height="2dp"
            app:indicator_height="42dp"
            app:indicator_textSize="14sp"
            app:indicator_width="0dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="57dp"
        android:layout_height="wrap_content" />


</RelativeLayout>


