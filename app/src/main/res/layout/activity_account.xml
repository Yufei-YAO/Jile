<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.AccountActivity"
    android:orientation="vertical"
    android:padding="1dp">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.075"
        android:orientation="horizontal"
        android:background="@drawable/top_and_bottom_edge">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            android:text="《"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"/>
        <Button
            android:id="@+id/btnCreateNewAccount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.11"
            android:text="+"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        android:paddingLeft="20dp"
        android:background="@drawable/top_and_bottom_edge"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvRawWealth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="净资产"
            android:gravity="center_vertical"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/tvTotalWealthNum"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:text="6666.00"
            android:gravity="center_vertical"
            android:textSize="45sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="较上个月.."
            android:gravity="center_vertical"
            android:textSize="15sp"/>
    </LinearLayout>
    <!--TODO 添加listview适配-->
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:layout_below="@id/ll_2"
        android:orientation="vertical"
        android:background="@drawable/top_and_bottom_edge"
        android:paddingLeft="10dp">
        <LinearLayout
            android:id="@+id/llCashTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/top_and_bottom_edge">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="现金账户"/>
                <TextView
                    android:id="@+id/tvCashNum"
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="资产"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llWealthTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/top_and_bottom_edge">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="金融账户"/>
                <TextView
                    android:id="@+id/tvWealthNum"
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="资产"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llVirtualTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/top_and_bottom_edge">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="虚拟账户"/>
                <TextView
                    android:id="@+id/tvVirtualNum"
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="资产"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/top_and_bottom_edge">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.2"
                    android:layout_height="wrap_content"
                    android:text="信用卡账户"/>
                <TextView
                    android:id="@+id/tvCardNum"
                    android:paddingVertical="5dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:layout_height="wrap_content"
                    android:text="资产"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>