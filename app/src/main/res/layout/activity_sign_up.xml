<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.SignUpActivity">
    <LinearLayout
        android:id="@+id/ll_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/theme_yellow">
        <ImageButton
            android:id="@+id/btnBack"
            android:background="@color/xui_transparent"
            android:layout_width="50dp"
            android:src="@drawable/ic_arrow_left"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="100dp"
        android:text="用户名"
        android:textSize="20sp"
        android:maxWidth="100dp"
        android:gravity="center_vertical|start"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:textSize="15sp"
        android:id="@+id/etUserName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:lines="1"
        android:inputType="text"
        android:layout_toEndOf="@+id/tvUserName"
        android:layout_below="@+id/ll_top"
        android:layout_marginTop="100dp"
        android:hint="请输入用户名"/>
    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvUserName"
        android:text="密码"
        android:textSize="20sp"
        android:gravity="center_vertical|start"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:maxWidth="100dp"
        android:textSize="15sp"
        android:lines="1"
        android:id="@+id/etPassword"
        android:inputType="textPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/tvPassword"
        android:layout_below="@+id/tvUserName"
        android:hint="请输入密码"/>
        <TextView
        android:id="@+id/tvRepeatPassword"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvPassword"
        android:text="重复密码"
        android:textSize="20sp"
        android:gravity="center_vertical|start"
        android:layout_marginLeft="50dp"/>
        <EditText
        android:maxWidth="100dp"
        android:lines="1"
        android:inputType="textPassword"
        android:id="@+id/etRepeatPassword"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/tvRepeatPassword"
        android:layout_below="@+id/tvPassword"
        android:hint="请再次输入密码"/>
    <TextView
        android:id="@+id/tvHint"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvRepeatPassword"
        android:text="密码提示"
        android:textSize="20sp"
        android:gravity="center_vertical|start"
        android:layout_marginLeft="50dp"/>
    <EditText
        android:maxWidth="100dp"
        android:lines="1"
        android:inputType="textPassword"
        android:id="@+id/etHint"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/tvHint"
        android:layout_below="@+id/tvRepeatPassword"
        android:hint="请输入密码提示"/>
    <TextView
        android:id="@+id/tvQuestion"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/tvRepeatPassword"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="50dp"
        android:text="密保问题"
        android:gravity="bottom"
        android:textSize="20sp"/>
    <EditText
        android:singleLine="true"
        android:lines="1"
        android:id="@+id/etQuestion"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:hint="请输入密保问题"
        android:layout_below="@+id/tvQuestion"/>
    <TextView
        android:id="@+id/tvAns"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/etQuestion"
        android:layout_marginHorizontal="50dp"
        android:text="答案"
        android:gravity="bottom"
        android:textSize="20sp"/>
    <EditText
        android:lines="1"
        android:singleLine="true"
        android:id="@+id/etAns"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:hint="请输入密保问题答案"
        android:layout_below="@+id/tvAns"/>
    <Button
        android:text="下一步"
        android:background="@drawable/btn_corners"
        android:textSize="20sp"
        android:id="@+id/btnNext"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/etAns"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>