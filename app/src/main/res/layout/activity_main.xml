<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainView.MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="250"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvMonth"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"/>
        <LinearLayout
            android:id="@+id/EarnAndCostTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCostTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="支出"
                android:gravity="center_vertical"
                android:textSize="25dp"/>
            <TextView
                android:id="@+id/tvEarnTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="收入"
                android:gravity="center_vertical"
                android:textSize="25dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tvEarnAndCost"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvCost"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="-524.00"
                android:gravity="center_vertical"
                android:textSize="50dp"/>
            <TextView
                android:id="@+id/tvIncome"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:text="+14.00"
                android:gravity="center_vertical"
                android:textSize="50dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvBudget"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:text="预算    "
                android:textSize="20sp"/>
            <TextView
                android:id="@+id/tvBudgetNum"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="1000"
                android:textSize="18sp"/>
        </LinearLayout>
        <Button
            android:id="@+id/btnModifyBudget"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="更改预算"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75"
        android:orientation="horizontal"
        android:background="@drawable/top_and_bottom_edge"
        android:padding="1dp">
        <Button
            android:id="@+id/btnToCalender"
            android:layout_width="75dp"
            android:background="@drawable/icon_calender"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:text="今天"
            android:gravity="center_vertical|start"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/tvIncomeToday"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:text="+0"
            android:gravity="center_vertical|start"
            android:textSize="25sp"/>
        <TextView
            android:id="@+id/tvCostToday"
            android:layout_width="0dp"
            android:layout_weight="1.0"
            android:layout_height="match_parent"
            android:text="-0"
            android:gravity="center_vertical|start"
            android:textSize="25sp"/>
        <Button
            android:id="@+id/btnToDetail"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="match_parent"
            android:text="》"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="340"
        android:orientation="vertical">
        <!--// TODO 添加可下拉地查看最近记账的功能 alpha版 只能显示5条-->
        <ListView
            android:id="@+id/lvRecent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/bottomButton"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="65"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/btnAccount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="账户"/>
        <Button
            android:id="@+id/btnDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="流水"/>
        <Button
            android:id="@+id/btnNew"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.25"
            android:text="+"/>
        <Button
            android:id="@+id/btnGraph"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="图表"/>
        <Button
            android:id="@+id/btnSetting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="设置"/>
    </LinearLayout>

</LinearLayout>